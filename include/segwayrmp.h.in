     *    {
     *    public:
     *     MySegwayWrapper () {
     *      my_segway_rmp.setInfoMsgCallback(boost::bind(&MySegwayWrapper::handleInfoMsg, this, _1));
     *     }
     *     void handleInfoMsg(const std::string &msg) {
     *       std::cout << "SegwayRMP Info: " << msg << std::endl;
     *     }
     *    
